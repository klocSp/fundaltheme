<script>
(function() {
  class LoginPopup{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
      this.currentStep = 'mobile';
      this.mobileNumber = '';
      this.isOtpSent = false;
    }

    connectedCallback() {
      this.setupEventListeners();
      this.checkAndShowPopup();
    }

    checkAndShowPopup() {
      const hasSeenPopup = localStorage.getItem('ai-login-popup-seen-{{ ai_gen_id }}');
      const isOtpSent = localStorage.getItem('ai-otp-sent-{{ ai_gen_id }}');
      
      if (!hasSeenPopup && !isOtpSent) {
        setTimeout(() => {
          this.showPopup();
        }, {{ block.settings.delay_seconds | times: 1000 }});
      }
    }

    setupEventListeners() {
      const closeBtn = this.querySelector('.ai-login-popup-close-{{ ai_gen_id }}');
      const sendOtpBtn = this.querySelector('.ai-login-send-otp-{{ ai_gen_id }}');
      const verifyOtpBtn = this.querySelector('.ai-login-verify-otp-{{ ai_gen_id }}');
      const resendLink = this.querySelector('.ai-login-resend-link-{{ ai_gen_id }}');
      const mobileInput = this.querySelector('#mobile-{{ ai_gen_id }}');
      const otpInputs = this.querySelectorAll('.ai-login-otp-input-{{ ai_gen_id }}');

      closeBtn.addEventListener('click', () => this.hidePopup());
      sendOtpBtn.addEventListener('click', () => this.sendOtp());
      verifyOtpBtn.addEventListener('click', () => this.verifyOtp());
      resendLink.addEventListener('click', (e) => {
        e.preventDefault();
        this.resendOtp();
      });

      mobileInput.addEventListener('input', (e) => {
        e.target.value = e.target.value.replace(/\D/g, '');
      });

      otpInputs.forEach((input, index) => {
        input.addEventListener('input', (e) => {
          const value = e.target.value.replace(/\D/g, '');
          e.target.value = value;
          
          if (value && index < otpInputs.length - 1) {
            otpInputs[index + 1].focus();
          }
        });

        input.addEventListener('keydown', (e) => {
          if (e.key === 'Backspace' && !e.target.value && index > 0) {
            otpInputs[index - 1].focus();
          }
        });
      });

      this.addEventListener('click', (e) => {
        if (e.target === this) {
          this.hidePopup();
        }
      });
    }

    showPopup() {
      this.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    hidePopup() {
      this.classList.remove('active');
      document.body.style.overflow = '';localStorage.setItem('ai-login-popup-seen-{{ ai_gen_id }}', 'true');
    }

    sendOtp() {
      const mobileInput = this.querySelector('#mobile-{{ ai_gen_id }}');
      const mobile = mobileInput.value.trim();
      const errorDiv = this.querySelector('.ai-login-step-mobile-{{ ai_gen_id }} .ai-login-error-{{ ai_gen_id }}');
      
      if (!mobile || mobile.length !== 10) {
        this.showError(errorDiv, 'Please enter a valid 10-digit mobile number');
        return;
      }

      this.mobileNumber = mobile;
      const sendBtn = this.querySelector('.ai-login-send-otp-{{ ai_gen_id }}');
      sendBtn.disabled = true;
      sendBtn.textContent = 'Sending...';

      setTimeout(() => {
        this.showStep('otp');
        this.isOtpSent = true;
        localStorage.setItem('ai-otp-sent-{{ ai_gen_id }}', 'true');
        sendBtn.disabled = false;
        sendBtn.textContent = '{{ block.settings.send_otp_text }}';
      }, 2000);
    }

    verifyOtp() {
      const otpInputs = this.querySelectorAll('.ai-login-otp-input-{{ ai_gen_id }}');
      const otp = Array.from(otpInputs).map(input => input.value).join('');
      const errorDiv = this.querySelector('.ai-login-step-otp-{{ ai_gen_id }} .ai-login-error-{{ ai_gen_id }}');
      const successDiv = this.querySelector('.ai-login-step-otp-{{ ai_gen_id }} .ai-login-success-{{ ai_gen_id }}');
      
      if (otp.length !== 6) {
        this.showError(errorDiv, 'Please enter complete 6-digit OTP');
        return;
      }

      const verifyBtn = this.querySelector('.ai-login-verify-otp-{{ ai_gen_id }}');
      verifyBtn.disabled = true;
      verifyBtn.textContent = 'Verifying...';

      setTimeout(() => {
        if (otp === '123456') {
          this.showSuccess(successDiv, 'Login successful! Redirecting...');
          setTimeout(() => {
            this.hidePopup();
            localStorage.removeItem('ai-otp-sent-{{ ai_gen_id }}');
          }, 2000);
        } else {
          this.showError(errorDiv, 'Invalid OTP. Please try again.');
        }verifyBtn.disabled = false;
        verifyBtn.textContent = '{{ block.settings.verify_otp_text }}';
      }, 2000);
    }

    resendOtp() {
      const resendLink = this.querySelector('.ai-login-resend-link-{{ ai_gen_id }}');
      resendLink.textContent = 'Sending...';
      
      setTimeout(() => {
        resendLink.textContent = '{{ block.settings.resend_otp_text }}';
        const successDiv = this.querySelector('.ai-login-step-otp-{{ ai_gen_id }} .ai-login-success-{{ ai_gen_id }}');
        this.showSuccess(successDiv, 'OTP resent successfully!');
        setTimeout(() => {
          successDiv.style.display = 'none';
        }, 3000);
      }, 2000);
    }

    showStep(step) {
      const steps = this.querySelectorAll('.ai-login-form-step-{{ ai_gen_id }}');
      steps.forEach(s => s.classList.remove('active'));
      const targetStep = this.querySelector(`.ai-login-step-${step}-{{ ai_gen_id }}`);
      if (targetStep) {
        targetStep.classList.add('active');
        this.currentStep = step;
      }
    }

    showError(element, message) {
      element.textContent = message;
      element.style.display = 'block';
      setTimeout(() => {
        element.style.display = 'none';
      }, 5000);
    }

    showSuccess(element, message) {
      element.textContent = message;
      element.style.display = 'block';
    }
  }

  customElements.define('login-popup-{{ ai_gen_id }}', LoginPopup{{ ai_gen_id }});
})();
</script>

