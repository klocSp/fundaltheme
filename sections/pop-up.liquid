    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 20px 0;
    text-align: center;
  }

  .ai-login-popup-subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0 0 30px 0;
    text-align: center;
    opacity: 0.8;
  }

