{% doc %}
  @prompt
    Shopify breadcramps liquid also its show as new section

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-breadcrumbs-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-breadcrumbs-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-breadcrumbs-nav-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-breadcrumbs-list-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 8px;
  }

  .ai-breadcrumbs-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .ai-breadcrumbs-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .ai-breadcrumbs-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    text-decoration: underline;
  }

  .ai-breadcrumbs-current-{{ ai_gen_id }} {
    color: {{ block.settings.current_color }};
    font-weight: 500;
  }

  .ai-breadcrumbs-separator-{{ ai_gen_id }} {
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.font_size | times: 0.8 }}px;user-select: none;
  }

  @media screen and (max-width: 749px) {
    .ai-breadcrumbs-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 0 {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-breadcrumbs-nav-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }

    .ai-breadcrumbs-container-{{ ai_gen_id }} {
      padding: 0 15px;
    }
  }
{% endstyle %}

<div class="ai-breadcrumbs-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-breadcrumbs-container-{{ ai_gen_id }}">
    <nav class="ai-breadcrumbs-nav-{{ ai_gen_id }}" aria-label="Breadcrumb">
      <ol class="ai-breadcrumbs-list-{{ ai_gen_id }}"><li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
          <a href="{{ routes.root_url }}" class="ai-breadcrumbs-link-{{ ai_gen_id }}">
            {{ block.settings.home_text }}
          </a>
        </li>

        {% case template.name %}
          {% when 'collection' %}
            <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
              <span class="ai-breadcrumbs-current-{{ ai_gen_id }}">{{ collection.title }}</span>
            </li>

          {% when 'product' %}
            {% if collection %}
              <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
                <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span><a href="{{ collection.url }}" class="ai-breadcrumbs-link-{{ ai_gen_id }}">
                  {{ collection.title }}
                </a>
              </li>
            {% endif %}<li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
              <span class="ai-breadcrumbs-current-{{ ai_gen_id }}">{{ product.title }}</span>
            </li>

          {% when 'page' %}
            <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
              <span class="ai-breadcrumbs-current-{{ ai_gen_id }}">{{ page.title }}</span>
            </li>

          {% when 'blog' %}
            <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
              <span class="ai-breadcrumbs-current-{{ ai_gen_id }}">{{ blog.title }}</span>
            </li>

          {% when 'article' %}
            <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span><a href="{{ blog.url }}" class="ai-breadcrumbs-link-{{ ai_gen_id }}">
                {{ blog.title }}
              </a>
            </li><li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
              <span class="ai-breadcrumbs-current-{{ ai_gen_id }}">{{ article.title }}</span>
            </li>

          {% when 'cart' %}
            <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
              <span class="ai-breadcrumbs-current-{{ ai_gen_id }}">{{ block.settings.cart_text }}</span>
            </li>

          {% when 'search' %}
            <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
              <span class="ai-breadcrumbs-current-{{ ai_gen_id }}">
                {% if search.performed %}
                  {{ block.settings.search_results_text }}: "{{ search.terms }}"
                {% else %}
                  {{ block.settings.search_text }}
                {% endif %}
              </span>
            </li>

          {% when '404' %}
            <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
              <span class="ai-breadcrumbs-current-{{ ai_gen_id }}">{{ block.settings.not_found_text }}</span>
            </li>

          {% when 'customers/account' %}
            <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
              <span class="ai-breadcrumbs-current-{{ ai_gen_id }}">{{ block.settings.account_text }}</span>
            </li>

          {% when 'customers/login' %}
            <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
              <span class="ai-breadcrumbs-current-{{ ai_gen_id }}">{{ block.settings.login_text }}</span>
            </li>

          {% when 'customers/register' %}
            <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
              <span class="ai-breadcrumbs-current-{{ ai_gen_id }}">{{ block.settings.register_text }}</span>
            </li>

          {% when 'customers/order' %}
            <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
              <a href="{{ routes.account_url }}" class="ai-breadcrumbs-link-{{ ai_gen_id }}">
                {{ block.settings.account_text }}
              </a>
            </li>
            <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
              <span class="ai-breadcrumbs-current-{{ ai_gen_id }}">{{ block.settings.order_text }}</span>
            </li>

          {% else %}
            {% unless template.name == 'index' %}
              <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
                <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
                <span class="ai-breadcrumbs-current-{{ ai_gen_id }}">{{ page_title }}</span>
              </li>
            {% endunless %}
        {% endcase %}
      </ol>
    </nav>
  </div>
</div>

